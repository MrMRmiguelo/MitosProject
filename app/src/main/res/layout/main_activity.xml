<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/idTxt"
            android:layout_width="301dp"
            android:layout_height="48dp"
            android:layout_marginTop="48dp"
            android:hint="ID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></EditText>

        <EditText
            android:id="@+id/nameTxt"
            android:layout_width="301dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:hint="Nombre"
            app:layout_constraintBottom_toTopOf="@+id/idenTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idTxt"
            app:layout_constraintVertical_bias="0.0"></EditText>

        <EditText
            android:id="@+id/idenTxt"
            android:layout_width="301dp"
            android:layout_height="48dp"
            android:layout_marginTop="196dp"
            android:hint="Identidad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></EditText>

        <EditText
            android:id="@+id/datetxt"
            android:layout_width="301dp"
            android:layout_height="48dp"
            android:layout_marginTop="36dp"
            android:hint="Fecha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idenTxt"></EditText>

        <Button
            android:id="@+id/insertBtn"
            android:layout_width="163dp"
            android:layout_height="54dp"
            android:background="#D32F2F"
            android:text="Agendar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.777" />

        <Button
            android:id="@+id/updateBtn"
            android:layout_width="163dp"
            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:background="#D32F2F"
            android:text="Editar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.912" />

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="163dp"
            android:layout_height="54dp"
            android:layout_marginTop="428dp"
            android:background="#D32F2F"
            android:text="Eliminar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.935"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.074" />

        <Button
            android:id="@+id/viewBtn"
            android:layout_width="163dp"
            android:layout_height="54dp"
            android:background="#D32F2F"
            android:text="Ver Lista"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.935"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deleteBtn"
            app:layout_constraintVertical_bias="0.293" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>